# Symloop Technology Website - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL (Laravel backend)
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Main website URL
NEXT_PUBLIC_SITE_URL=https://symloop.com

# =============================================================================
# AI CHAT INTEGRATION
# =============================================================================

# OpenAI API Key for ChatGPT integration
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# ChatGPT Model (optional, defaults to gpt-3.5-turbo)
NEXT_PUBLIC_OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# CONTACT INFORMATION
# =============================================================================

# Company phone number
NEXT_PUBLIC_PHONE_NUMBER=+213549575512

# Company email
NEXT_PUBLIC_EMAIL=contact@symloop.com

# WhatsApp number (same as phone or different)
NEXT_PUBLIC_WHATSAPP_NUMBER=213549575512

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================

# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager ID (optional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Facebook Pixel ID (optional)
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=000000000000000

# =============================================================================
# SEO & SOCIAL MEDIA
# =============================================================================

# Default meta description
NEXT_PUBLIC_META_DESCRIPTION=Symloop Technology - Expert IT solutions in the MENA region. Web development, mobile apps, ERP/CRM systems, and digital transformation services.

# Social media URLs
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/symloop
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/symloop
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/symloop

# =============================================================================
# EMAIL CONFIGURATION (for contact forms)
# =============================================================================

# Email service provider settings (if using external service)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_emailjs_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
NEXT_PUBLIC_EMAILJS_USER_ID=your_emailjs_user_id

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS allowed origins (comma-separated)
NEXT_PUBLIC_CORS_ORIGINS=http://localhost:3000,https://symloop.com

# API rate limiting (requests per minute)
NEXT_PUBLIC_RATE_LIMIT=100

# =============================================================================
# MULTILINGUAL SETTINGS
# =============================================================================

# Default language
NEXT_PUBLIC_DEFAULT_LOCALE=fr

# Available languages (comma-separated)
NEXT_PUBLIC_AVAILABLE_LOCALES=en,fr,ar

# =============================================================================
# MEDIA & ASSETS
# =============================================================================

# CDN URL for assets (optional)
NEXT_PUBLIC_CDN_URL=

# Maximum file upload size (in MB)
NEXT_PUBLIC_MAX_FILE_SIZE=5

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Stripe (for payments - if needed)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# PayPal (if needed)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Vercel project URL (if using Vercel)
VERCEL_URL=

# Custom domain
NEXT_PUBLIC_DOMAIN=symloop.com

# =============================================================================
# BACKEND SYNC (if needed)
# =============================================================================

# Database connection (for server-side functions)
DATABASE_URL=mysql://username:password@localhost:3306/symloop_db

# Redis URL (for caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry DSN (for error tracking)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# LogRocket ID (for session replay)
NEXT_PUBLIC_LOGROCKET_ID=your_logrocket_id

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. All NEXT_PUBLIC_ variables are exposed to the browser
# 2. Server-only variables should NOT have NEXT_PUBLIC_ prefix
# 3. Never commit real API keys to version control
# 4. Use different values for development, staging, and production
# 5. Some variables are optional - only add what you need
#